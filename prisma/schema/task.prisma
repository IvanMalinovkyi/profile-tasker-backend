model Task {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  name        String
  isCompleted Boolean

  user   User   @relation(fields: [userId], references: [id])
  userId String @map("user_id")

  @@map("tasks")
}
